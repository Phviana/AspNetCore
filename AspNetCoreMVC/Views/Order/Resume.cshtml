@model Order

<h3>Order Summary</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Order number: @(Model.Id)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Your Information</h3>
                <div>@(Model.Register.Name)</div>
                <div>@(Model.Register.Telephone)</div>
            </div>
            <div class="col-md-3">
                @(Model.Register.Email)
            </div>
            <div class="col-md-6">
                <h3>Delivery Address</h3>
                <div>@(Model.Register.Address) @(Model.Register.Complement) - @(Model.Register.Neighborhood) - CEP: @(Model.Register.CEP) - @(Model.Register.County) - @(Model.Register.UF) - Brasil</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Amount</h3>
            </div>
        </div>

        @foreach (var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-10">
                    <div>@(item.Product.Name)</div>
                </div>
                <div class="col-md-2">
                    <div class="pull-right">@(item.Amount)</div>
                </div>
            </div>
        }

    </div>
</div>
